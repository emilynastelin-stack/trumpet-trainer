---
import Layout from '../layouts/Layout.astro';
---

<Layout>

  <div class="card">
    <div class="title">Trumpet Trainer</div>
    <div class="button-group" role="navigation" aria-label="Main modes">
      <a href="/LearningMode" class="nav-btn primary" role="button">Learning Mode</a>
      <a href="/MarathonMode" class="nav-btn secondary" role="button">Marathon Mode</a>
      <a href="/SpeedMode" class="nav-btn tertiary" role="button">Speed Mode</a>
    </div>
  </div>

  <style>
    /* Card styling: brighter, modern, playful */
    .card {
      box-sizing: border-box;
      width: 90vw;
      max-width: 420px;
      padding: 1.6rem 1.25rem;
      border-radius: 20px;
      background: linear-gradient(180deg, #fffbf0 0%, #fff4e6 100%);
      border: 1px solid rgba(255,255,255,0.08);
      box-shadow: 0 18px 50px rgba(0,0,0,0.25);
      display: flex;
      flex-direction: column;
      gap: 1rem;
      justify-content: center;
      align-items: stretch;
      overflow: hidden;
      color: #111827;
      margin: auto;
    }

    .title {
      font-size: clamp(1.2rem, 5vw, 2rem);
      font-weight: 900;
      text-align: center;
      text-shadow: 0 2px 4px rgba(0,0,0,0.15);
      margin-bottom: 1rem;
      color: #1f2937;
    }

    .button-group {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
      width: 100%;
    }

    .nav-btn {
      box-sizing: border-box;
      display: block;
      width: 100%;
      max-width: 100%;
      padding: clamp(0.75rem, 2.5vw, 1rem);
      font-size: clamp(1rem, 2.5vw, 1.1rem);
      font-weight: 700;
      border: none;
      border-radius: 16px;
      color: #fff;
      text-decoration: none;
      text-align: center;
      cursor: pointer;
      box-shadow: 0 6px 18px rgba(0,0,0,0.2);
      transition: transform 0.15s ease, box-shadow 0.15s ease, background 0.25s ease;
      min-height: 50px;
      white-space: normal;
      overflow-wrap: anywhere;
    }

    .nav-btn:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 28px rgba(0,0,0,0.25);
    }

    .nav-btn.primary   { background: linear-gradient(90deg, #ff6b6b 0%, #fcd34d 100%); }
    .nav-btn.secondary { background: linear-gradient(90deg, #6b5bff 0%, #3b82f6 100%); }
    .nav-btn.tertiary  { background: linear-gradient(90deg, #34d399 0%, #10b981 100%); }

    @media (max-width: 420px) {
      .card { width: 95vw; padding: 1.2rem 1rem; border-radius: 16px; }
      .nav-btn { padding: 0.7rem; font-size: 1rem; min-height: 48px; }
    }
  </style>
</Layout>
