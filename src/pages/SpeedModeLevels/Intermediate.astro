  'D1.png',
  'E1.png',
  'F1.png',
  'G1.png',
  'A1.png',
  'B1.png',
  'G0.png',
  'A0.png',
  'B0.png',
  'C2.png',
  'D2.png',
  'E2.png',
  'F2.png',
  'G2.png'
  , 'Gsharp0.png', 'Asharp0.png', 'Csharp1.png', 'Dsharp1.png', 'Fsharp1.png', 'Gsharp1.png', 'Asharp1.png', 'Csharp2.png', 'Dsharp2.png', 'Fsharp2.png', 'Gsharp2.png'
