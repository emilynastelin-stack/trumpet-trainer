---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Trumpet Trainer</title>
    <style>
      html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background: #1f1c2c;
        font-family: 'Roboto', sans-serif;
        color: white;
        overflow: hidden; /* prevents scrolling */
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        flex: 1 1 auto; /* flexible but can shrink */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        position: relative;
        padding: 1rem; 
        box-sizing: border-box;
        overflow: hidden; /* prevent main from scrolling */
      }

      footer {
        flex-shrink: 0; /* stay at bottom */
      }
    </style>
  </head>
  <body>
    <Navbar />
    <main>
      <slot /> <!-- page content -->
    </main>
    <Footer />
  </body>
</html>

